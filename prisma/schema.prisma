datasource db {
  provider          = "mysql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Reading {
  id        String   @id @default(cuid())
  title     String
  author    String
  link      String
  pubDate   String
  isbn      String?
  jpno      String?
  status    String   @default("unread")
  note      String?
  createdAt DateTime @default(now())
}
